<section class="container" style="padding: 60px 0; max-width: 400px;">
    <h2 class="section-title">Login</h2>
    <% if (error) { %>
        <div style="color: red; margin-bottom: 10px;"><%= error %></div>
    <% } %>
    <form method="POST" action="/auth/login">
        <div style="margin-bottom: 15px;">
            <input type="text" name="username" placeholder="Username" required class="btn" style="width: 100%; color: #333; background: #fff;" />
        </div>
        <div style="margin-bottom: 15px;">
            <input type="password" name="password" placeholder="Password" required class="btn" style="width: 100%; color: #333; background: #fff;" />
        </div>
        <button type="submit" class="btn" style="width: 100%;">Login</button>
    </form>
    <div style="margin-top: 10px;">Don't have an account? <a href="/auth/register">Register</a></div>
</section> 