<section class="container" style="padding: 60px 0; max-width:600px;">
    <h2 class="section-title">Edit Vehicle</h2>
    <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <form method="POST" action="/admin/vehicles/<%= vehicle._id %>" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" name="name" class="form-control" value="<%= vehicle.name %>" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Brand</label>
            <input type="text" name="brand" class="form-control" value="<%= vehicle.brand %>" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Type</label>
            <input type="text" name="type" class="form-control" value="<%= vehicle.type %>" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Price</label>
            <input type="number" name="price" class="form-control" value="<%= vehicle.price %>" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Current Image</label><br>
            <img src="<%= vehicle.image %>" alt="Current Image" style="height:100px;object-fit:cover;">
        </div>
        <div class="mb-3">
            <label class="form-label">Change Image</label>
            <input type="file" name="image" class="form-control" accept="image/*" />
        </div>
        <button type="submit" class="btn btn-primary">Update Vehicle</button>
        <a href="/admin/vehicles" class="btn btn-secondary">Cancel</a>
    </form>
</section> 