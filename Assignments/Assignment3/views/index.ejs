<!-- Featured Products -->
<section class="products">
    <div class="container">
        <h2 class="section-title">Featured <span>Products</span></h2>
        <div class="product-container">
            <% products.forEach(function(product) { %>
                <div class="product-card">
                    <div class="product-img">
                        <img src="<%= product.image %>" alt="<%= product.name %>">
                    </div>
                    <div class="product-content">
                        <h3 class="product-title"><%= product.name %></h3>
                        <p class="product-category"><%= product.category %></p>
                        <div class="product-details">
                            <span class="product-price">$<%= product.price %></span>
                            <button class="add-to-cart" data-product-id="<%= product.id %>">+</button>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="cta">
    <div class="container">
        <h2>Subscribe to Our Newsletter</h2>
        <p>Stay updated with our latest arrivals and exclusive offers. Subscribe now and get 10% off on your first order!</p>
        <a href="#" class="cta-btn">Subscribe Now</a>
    </div>
</section>