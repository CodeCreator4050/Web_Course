                        <div class="stat-card">
                            <div class="stat-icon">üíù</div>
                            <div class="stat-info">
                                <h3>12</h3>
                                <p>Wishlist Items</p>
                            </div>
                        </div>
                        
                        <div class="stat-card">
                            <div class="stat-icon">üí≥</div>
                            <div class="stat-info">
                                <h3>$245.50</h3>
                                <p>Total Spent</p>
                            </div>
                        </div>
                        
                        <div class="stat-card">
                            <div class="stat-icon">üéÅ</div>
                            <div class="stat-info">
                                <h3>150</h3>
                                <p>Reward Points</p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Recent Orders -->
                    <div class="recent-orders">
