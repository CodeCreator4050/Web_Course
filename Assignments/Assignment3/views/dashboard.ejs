                                <div class="order-date">Jan 10, 2025</div>
                                <div class="order-status status-processing">Processing</div>
                                <div class="order-total">$155.50</div>
                                <div class="order-actions">
                                    <button class="btn btn-sm">View Details</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Orders Section -->
                <div id="orders" class="dashboard-section">
                    <h2>My Orders</h2>
                    <div class="orders-filter">
                        <button class="filter-btn active">All Orders</button>
                        <button class="filter-btn">Processing</button>
                        <button class="filter-btn">Shipped</button>
                        <button class="filter-btn">Delivered</button>
                    </div>
                    
                    <div class="detailed-orders">
                        <div class="order-card">
                            <div class="order-header">
                                <div class="order-info">
