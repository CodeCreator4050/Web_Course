<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/components.css">
    <% if (typeof additionalCSS !== 'undefined') { %>
        <% additionalCSS.forEach(function(css) { %>
            <link rel="stylesheet" href="<%= css %>">
        <% }); %>
    <% } %>
</head>
<body>
    <!-- Header & Navigation -->
    <header>
        <div class="container">
            <nav class="navbar">
                <div class="logo">Style<span>Hub</span></div>
                <ul class="nav-links">
                    <li><a href="/">Home</a></li>
                    <li><a href="/products">Products</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="/contact">Contact</a></li>
                    <% if (user) { %>
                        <li><a href="/dashboard">Dashboard</a></li>
                        <li><a href="/logout">Logout</a></li>
                        <li class="user-info">Welcome, <%= user.name %>!</li>
                    <% } else { %>
                        <li><a href="/login">Login</a></li>
                        <li><a href="/register">Register</a></li>
                    <% } %>
                    <li class="cart-icon">
                        <a href="#" id="cart-link">Cart</a>
                        <span class="cart-count" id="cart-count"><%= locals.cartCount || 0 %></span>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Flash Messages -->
    <% if (success_msg && success_msg.length > 0) { %>
        <div class="flash-message success">
            <%= success_msg %>
        </div>
    <% } %>
    
    <% if (error_msg && error_msg.length > 0) { %>
        <div class="flash-message error">
            <%= error_msg %>
        </div>
    <% } %>
    
    <% if (error && error.length > 0) { %>
        <div class="flash-message error">
            <%= error %>
        </div>
    <% } %>

    <!-- Main Content -->
    <main>
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-container">
                <!-- Column 1 -->
                <div class="footer-column">
                    <h3>StyleHub</h3>
                    <p>Your one-stop destination for trendy fashion and accessories at affordable prices.</p>
                    <div class="social-links">
                        <a href="#" class="social-icon">FB</a>
                        <a href="#" class="social-icon">IG</a>
                        <a href="#" class="social-icon">TW</a>
                        <a href="#" class="social-icon">YT</a>
                    </div>
                </div>
                
                <!-- Column 2 -->
                <div class="footer-column">
                    <h3>Shop</h3>
                    <ul class="footer-links">
                        <li><a href="#">Men's Fashion</a></li>
                        <li><a href="#">Women's Fashion</a></li>
                        <li><a href="#">Kids Collection</a></li>
                        <li><a href="#">Accessories</a></li>
                        <li><a href="#">New Arrivals</a></li>
                    </ul>
                </div>
                
                <!-- Column 3 -->
                <div class="footer-column">
                    <h3>Customer Service</h3>
                    <ul class="footer-links">
                        <li><a href="/contact">Contact Us</a></li>
                        <li><a href="#">FAQs</a></li>
                        <li><a href="#">Returns & Exchanges</a></li>
                        <li><a href="#">Shipping Policy</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                    </ul>
                </div>
                
                <!-- Column 4 -->
                <div class="footer-column">
                    <h3>Contact Info</h3>
                    <p>123 Fashion Street, Style City</p>
                    <p>Email: info@stylehub.com</p>
                    <p>Phone: +1 (555) 123-4567</p>
                    <div class="payment-methods">
                        <span class="payment-icon">VISA</span>
                        <span class="payment-icon">MC</span>
                        <span class="payment-icon">AMEX</span>
                        <span class="payment-icon">PYPL</span>
                    </div>
                </div>
            </div>
            
            <div class="footer-bottom">
                <p>&copy; 2025 StyleHub. All Rights Reserved.</p>
            </div>
        </div>
    </footer>

    <script src="/js/main.js"></script>
    <% if (typeof additionalJS !== 'undefined') { %>
        <% additionalJS.forEach(function(js) { %>
            <script src="<%= js %>"></script>
        <% }); %>
    <% } %>
</body>
</html>