<!DOCTYPE html>
<html>
<head>
  <title>Products</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <div class="container mx-auto p-4">
    <% if (messages.length) { %>
      <% messages.forEach(message => { %>
        <div class="bg-<%= message.type === 'success' ? 'green' : 'red' %>-100 border border-<%= message.type === 'success' ? 'green' : 'red' %>-400 text-<%= message.type === 'success' ? 'green' : 'red' %>-700 px-4 py-3 rounded mb-4">
          <%= message.text %>
        </div>
      <% }) %>
    <% } %>
    
    <h1 class="text-2xl font-bold mb-4">Products</h1>
    <a href="/cart" class="bg-blue-500 text-white px-4 py-2 rounded">View Cart</a>
    <div class="grid grid-cols-3 gap-4 mt-4">
      <% products.forEach(product => { %>
        <div class="bg-white p-4 rounded shadow">
          <h2 class="text-xl font-semibold"><%= product.title %></h2>
          <p>$<%= product.price %></p>
          <form action="/cart/add/<%= product._id %>" method="POST">
            <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded mt-2">Add to Cart</button>
          </form>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>